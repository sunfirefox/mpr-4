/*
    est.bit -- Embedded Secure Transport
 */

Bit.load({

    targets: {
        libest: {
            enable: 'bit.packs.est.enable',
            type: 'lib',
            headers: [ '*.h' ],
            sources: [ 'estLib.c' ],
            '-compiler': [
                '-Wall',
                '-Wshorten-64-to-32',
            ],
        },

        'ca-crt': {
            type: 'file',                                                                                  
            files: [ 'ca.crt' ],                                                                       
            path: '${BIN}/ca.crt',                                                                    
        }, 
	},
})
